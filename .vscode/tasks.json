{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start front end",
            "type": "shell",
            "command": "cd ./FrontEnd; npm start",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Start back end",
            "type": "shell",
            "command": "cd ./Backend; php artisan serve --port 8000",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Start Webscocket",
            "type": "shell",
            "command": "cd ./Backend; php artisan websocket:serve --host=127.0.0.1",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
    ]
}